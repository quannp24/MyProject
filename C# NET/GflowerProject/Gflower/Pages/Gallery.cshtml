                                    @:</div>
                                    @:<div style="display: flex;">
                                }
                                @:<div class="my-2 col-lg-3 col-md-4 col-6 product-table" style="width: 25%;">
                                    @:<div class="product-box-2 h-100 bg-white position-relative" id="product-card" style="text-align: center">
