@page
@model Gflower.Pages.PaymentModel
@{
}
<html>
<head>
    <meta charset="UTF-8">
    <title>SpanLuxy-Payment</title>
    <link rel="shortcut icon" href="~/Image/Resource/icon.ico" type="image/x-icon">


    <link href="https://fonts.googleapis.com/css?family=Baloo+Chettan|Poppins:400,600,700&display=swap"
          rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
    <link rel="stylesheet" type="text/css" href="~/css/cart.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
          integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>
<body>
    <header class="header_section" style="padding: 10px 0;">
        <div class="container">
            <nav class="navbar navbar-expand-lg custom_nav-container " style="display: flex;">
                <a class="navbar-brand" href="~/home" style="width: 32%;">
                    <img class="img-title" src="~/Image/Resource/ne.png" width="70px" height="auto">
                    <span>
                        SpanLuxy
                    </span>
                </a>


                <div class="collapse navbar-collapse" id="navbarSupportedContent" style="width: 68%;display: flex;">
                    <div class="d-flex mx-auto flex-column flex-lg-row align-items-center" style="width: 70%;">
                        <ul class="navbar-nav " style="list-style-type: none;display: flex;">
                            <li class="nav-item">
                                <a class="nav-link" href="~/home">Home </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href=""> About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/gallery"> Gallery </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="">Contact us</a>
                            </li>
                        </ul>
                    </div>

                    <div class="quote_btn-container " style="width: 30%;">
                        @if (Model.account == null)
                        {
                            <a href="~/login" style="margin-right: 30px;">
                                Log in

                            </a>
                        }
                        @if (Model.account != null)
                        {
                            <div class="dropdown-header" style="margin-right: 30px;">
                                <a>Hello <span style="color: #ffffff;font-weight: bold; ">@Model.account.FirstName</span></a>
                                <div class="dropdown-content-header">
                                    <ul style="padding-left: 0;">

                                        @if (Model.account.Role == 1)
                                        {
                                            <li><a href="~/management">Management</a></li>
                                        }
                                        <li><a href="/myorder">My order</a></li>
                                        <li><a href="">User profile</a></li>
                                        <li><a href="/logout">Log out</a></li>
                                    </ul>
                                </div>
                            </div>
                        }

                        <a class="img-cart" href="~/cart">
                            <img src="~/Image/Resource/cart.png" alt="">


                            @if (Model.carts != null && Model.carts.Count > 0)
                            {
                                <span id="number-cart">@Model.carts.Count</span>
                            }
                            else
                            {
                                <span id="number-cart"></span>
                            }

                        </a>

                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div id="cart-body">
        <div class="fake-body-checkout" id="inputPayment" style="min-height: 803px;">
            <div class="CartContainer-checkout" id="CartContainer">
                @if (Model.typePayment>0)
                {
                    <div class="infor-checkout" style="background-color:#e0fbff;color:#514f5c">
                    <div class="Header">
                        <h3 class="Heading">Order information</h3>
                    </div>
                    <div style="text-align: center;">
                        <img src="~/Image/Resource/vnpay.png" width="50%">
                    </div>
                    <div class="checkout-form" style="padding: 0 5%">

                        <div class="checkout-input" style="display: flex">
                            <div style="float: left;">
                                <a>Orderer's name</a>
                                    @{
                                        if (Model.account != null)
                                        {
                                            string name_order = Model.account.LastName + Model.account.FirstName;
                                            <input class="form-control" required type="text" id="order-name" value="@name_order" style="width: 90%;background-color:rgb(253 253 253);color:#000">
                                        }

                                        else
                                        {
                                            <input class="form-control" required type="text" id="order-name"  style="width: 90%;background-color:rgb(253 253 253);color:#000">

                                        }
                                    }
                            </div>
                            <div style="float: right;">
                                <a>Phone</a>
                                    <input type="text" style="background-color:rgb(253 253 253);color:#000" required id="phone">
                            </div>
                        </div>
                        <div class="checkout-input">
                            <a>Consignee's name</a>
                                <input type="text" style="background-color:rgb(253 253 253);color:#000" required id="name">
                        </div>
                        <div class="checkout-input">
                            <a>Address</a>
                                <input type="text" style="background-color:rgb(253 253 253);color:#000" required id="address">
                        </div>
                       
                    </div>

                    <div style="text-align: center">
                        <span style="width:100%" id="message" class="mess-payment"></span>
                    </div>
                    <hr>
                    <div class="checkout" style="display:block">
                            <button id="payment" onclick="paymentVNPay()" style="width: 28%" class="button btn-checkout payment">Payment</button>
                    </div>
                </div>
                }
                else
                {
                    <div class="infor-checkout">
                        <div class="Header">
                            <h3 class="Heading">Order information</h3>
                        </div>
                        <div style="text-align: center;margin-bottom: 10%">
                            <img src="~/Image/Resource/linhvatmomo.png" width="18%">
                            <img src="~/Image/Resource/logomomo.png" width="30%">
                        </div>
                        <div class="checkout-form" style="padding: 0 5%">

                            <div class="checkout-input" style="display: flex">
                                <div style="float: left;">
                                    <a>Orderer's name</a>
                                    @{
                                        if (Model.account != null)
                                        {
                                            string name_order = Model.account.LastName + Model.account.FirstName;
                                            <input class="form-control" required type="text" id="order-name" value="@name_order" style="width: 90%;">
                                        }

                                        else
                                        {
                                            <input class="form-control" required type="text" id="order-name" style="width: 90%;">

                                        }
                                    }
                                </div>
                                <div style="float: right;">
                                    <a>Phone</a>
                                    <input type="text" required id="phone">
                                </div>
                            </div>
                            <div class="checkout-input">
                                <a>Consignee's name</a>
                                <input type="text" required id="name">
                            </div>
                            <div class="checkout-input">
                                <a>Address</a>
                                <input type="text" required id="address">
                            </div>

                        </div>

                        <div style="text-align: center">
                            <span style="width:100%" id="message" class="mess-payment"></span>
                        </div>
                        <hr>
                        <div class="checkout" style="display:block">
                            <button id="payment" onclick="paymentMomo()" style="width: 28%" class="button btn-checkout payment">Payment</button>
                        </div>
                    </div>
                }
                
                <div class="content-list" id="content-list" style="color:#afa0a0;margin-top:25px">
                    @if (Model.carts != null)
                    {
                        decimal discount, oldPrice, price, total = 0;
                        var carts = Model.carts;
                        @for (int i = 0; i < carts.Count(); i++)
                        {
                            <div class="Cart-Items">
                                <div class="image-box">
                                    <img src="~/Image/bouquet/@carts[i].Product.ProductImage" height="120px" />
                                </div>
                                <div class="about">
                                    <h1 class="title" style="font-size:17px">
                                        @carts[i].Product.ProductName
                                    </h1>
                                    <h1 class="id-product" hidden>
                                        @carts[i].ProductId
                                    </h1>
                                    @{
                                        total += carts[i].TotalPrice;
                                    }
                                    <h3 class="unitprice" style="font-size:15px">
                                        $@Math.Round(carts[i].Product.ProductPrice,2)
                                    </h3>
                                </div>
                                <div class="counter">
                                    <div class="count">
                                        @carts[i].Quantity
                                    </div>
                                </div>
                                <div class="prices">
                                    <div class="amount" style="font-size:17px">
                                        $@Math.Round(carts[i].TotalPrice,2)
                                    </div>
                                </div>
                            </div>
                        }
                        @if (carts != null && carts.Count() > 0)
                        {
                            <hr>
                            <div class="checkout">
                                <div class="total">
                                    <div>
                                        <div class="Subtotal" id="total">Total</div>
                                        <div class="items">@carts.Count() items</div>
                                    </div>
                                    <div class="total-amount">
                                        $@Math.Round(total,2)
                                    </div>
                                </div>
                            </div>
                        }
                    }
                     

                </div>
            </div>
        </div>
       
    </div>
    <footer class="container-fluid footer_section" style="width: 100%;">
        <!-- <div >
        <p>
        <span>Contact with us</span>
        </p>
        <p>Phone :</p> -->
        <div class="container p-4" style="width: 100%;">
            <!--Grid row-->
            <div style="display: flex;margin: auto;">

                <!--Grid column-->
                <div class="col-lg-6 col-md-6 mb-6 mb-md-0" style="width: 50%; margin: auto;display: flex;
                justify-content: center;
                align-items: center;">
                    <div>
                        <h5 class="text-uppercase mb-4 pb-1" style="margin-bottom: 0;">
                            <i class="fas fa-search"></i>&nbsp;Contact with us
                        </h5>
                        <ul class="fa-ul" style="margin-left: 1.65em;">
                            <li class="mb-3 text-footer">
                                <span class="fa-li"><i class="fas fa-home"></i></span><span class="ms-2">
                                    Tân Xã,
                                    Thạch Thất, Hà Nội
                                </span>
                            </li>
                            <li class="mb-3 text-footer">
                                <span class="fa-li"><i class="fas fa-envelope"></i></span><span class="ms-2">
                                    Email support:
                                    hoidap@gflower.vn
                                </span>
                            </li>

                        </ul>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 mb-6 mb-md-0" style="width: 50%;display: flex;
                justify-content: center;
                align-items: center;" ;>
                    <div>
                        <h5 class="text-uppercase mb-4" style="width: 500px;margin-bottom: 0;">
                            <i class="far fa-clock"></i>&nbsp;Support customer
                        </h5>

                        <ul class="fa-ul text-footer" style="margin-left: 1.65em;">
                            <li class="mb-3">
                                <span class="ms-2">Time: 8:00 - 20:00</span>
                            </li>
                            <li class="mb-3 text-footer">
                                <span class="fa-li"><i class="fas fa-phone"></i></span><span class="ms-2">
                                    Hotline: 1900
                                    6017
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
<script src="~/js/payment.js"></script>

</html>
